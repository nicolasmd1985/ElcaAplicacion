<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Remito">

    <LinearLayout
        android:id="@+id/header_detail_things"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:background="#4E8DA6"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="0px">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4E8DA6"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00bcd4"
                android:onClick="come_back"
                android:text="@string/terminar"
                app:srcCompat="@android:drawable/ic_menu_revert" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volver"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                tools:layout_editor_absoluteX="230dp"
                tools:layout_editor_absoluteY="74dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4E8DA6"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/scan_button"
                android:layout_width="41dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:background="#00bcd4"
                android:onClick="erase_sign"
                android:textSize="30dp"
                app:srcCompat="@android:drawable/editbox_background_normal" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borrar firma"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4E8DA6"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/button_cancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00bcd4"
                android:text="@string/terminar"
                android:onClick="send_order"
                app:srcCompat="@android:drawable/ic_menu_save" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finalizar y grabar"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                tools:layout_editor_absoluteX="230dp"
                tools:layout_editor_absoluteY="74dp" />


        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/observaciones"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@android:color/background_light"
                    android:ems="10"
                    android:hint="Observaciones Generales"
                    android:inputType="textMultiLine"
                    android:paddingBottom="1dp"
                    android:paddingEnd="1dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:paddingTop="1dp"
                    android:selectAllOnFocus="false"
                    android:singleLine="false"
                    android:textColor="@android:color/background_dark"
                    android:textColorHint="?attr/colorControlHighlight"
                    android:textSize="18sp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/signing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textAlignment="center"
                    android:text="Firme en el recuadro" />

                <LinearLayout
                    android:background="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <mahecha.nicolas.elcaaplicacion.DrawingView
                        android:layout_margin="3dp"
                        android:id="@+id/drawing"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_above="@+id/save"

                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="#FFFFFFFF" />

                </LinearLayout>




                <EditText
                    android:id="@+id/aclaracion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Nombre de quien recibe "
                    android:inputType="textPersonName" />


                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="E-mail de quien recibe "
                    android:inputType="textEmailAddress" />

            </LinearLayout>




        </ScrollView>

    </LinearLayout>


</LinearLayout>