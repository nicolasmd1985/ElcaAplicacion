<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_detail_things"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:background="#4E8DA6"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="0px">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4E8DA6"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00bcd4"
                android:onClick="canceldisp"
                android:text="@string/terminar"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                tools:layout_editor_absoluteX="230dp"
                tools:layout_editor_absoluteY="74dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4E8DA6"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/scan_button"
                android:layout_width="41dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:background="#00bcd4"
                android:onClick="camera_scan"
                android:textSize="30dp"
                app:srcCompat="@android:drawable/ic_search_category_default" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scanear codigo"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4E8DA6"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/button_cancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00bcd4"
                android:text="@string/terminar"
                android:onClick="adddip"
                app:srcCompat="@android:drawable/ic_menu_save" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finalizar y grabar"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                tools:layout_editor_absoluteX="230dp"
                tools:layout_editor_absoluteY="74dp" />


        </LinearLayout>



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="@+id/header_detail_things"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/codigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/codigo"
                android:selectAllOnFocus="true"
                android:singleLine="true">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/nomdisp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:hint="@string/descrip_disp">

            </EditText>
            <EditText
                android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="@string/nomb">

            </EditText>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/galery"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_weight="10"
                android:scrollbars="horizontal" />


            <EditText
                android:id="@+id/latitud"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ems="0"
                android:visibility="invisible"
                android:hint="latitud"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/mensaje_id"
                android:visibility="invisible"
                android:layout_alignParentBottom="true" />

            <EditText
                android:id="@+id/longitud"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ems="10"
                android:hint="longitud"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/tiempo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ems="10"
                android:hint="tiempo"
                android:visibility="invisible" />

            <Button
                android:id="@+id/camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:enabled="false"
                android:onClick="evidence_intent"
                android:text="Evidencia Fotografica"/>

        </LinearLayout>

    </ScrollView>


















</androidx.constraintlayout.widget.ConstraintLayout>


